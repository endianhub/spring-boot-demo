		INSERT INTO 
		<include refid="tableName"></include>
		(teacher, name, age, sex, score)
		VALUES(<include refid="fieldValue"></include>)
	</insert>
	
	<delete id="remove" parameterType="int">
		DELETE FROM 
			<include refid="tableName"></include>
		WHERE 
			id=#{paramId}
	</delete>
	
